---
import Icon from '@/components/icon.astro';
import type { ComponentProps } from 'astro/types';
import { twMerge } from 'tailwind-merge';

type Props = Omit<ComponentProps<typeof Icon>, 'name'> & { name?: string };

const { class: className, name, variant, ...props } = Astro.props;
---

<Icon
  {...props}
  name={name ?? 'image-up'}
  variant={variant ?? 'soft'}
  class={twMerge(
    'relative -z-10 size-24 opacity-50 motion-safe:transition-transform',
    'group-hover/image-window-upload-root:scale-110',
    className,
  )}
/>
