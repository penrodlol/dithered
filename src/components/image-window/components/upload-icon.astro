---
import IconComponent from '@/components/icon.astro';
import type { ComponentProps } from 'astro/types';
import { twMerge } from 'tailwind-merge';

type Props = Omit<ComponentProps<typeof IconComponent>, 'name'> & { name?: string };

const { class: className, name, variant, ...props } = Astro.props;
---

<IconComponent
  {...props}
  name={name ?? 'image-up'}
  variant={variant ?? 'soft'}
  class={twMerge('size-14 opacity-50', className)}
/>
