---
import IconComponent from '@/components/icon.astro';
import type { ComponentProps } from 'astro/types';
import { twMerge } from 'tailwind-merge';

type Props = Omit<ComponentProps<typeof IconComponent>, 'name'> & { name?: string };

const { class: className, name, ...props } = Astro.props;
---

<IconComponent
  {...props}
  name={name ?? 'image'}
  class={twMerge(
    'size-18 opacity-20 not-only:mb-6 motion-safe:transition-transform',
    'group-hover/image-window-upload:scale-110',
    className,
  )}
>
  <slot />
</IconComponent>
