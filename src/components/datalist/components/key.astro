---
import Text from '@/components/text.astro';
import type { ComponentProps } from 'astro/types';
import { twMerge } from 'tailwind-merge';

type Props = Omit<ComponentProps<typeof Text<'dt'>>, 'as'>;

const { class: className, variant, ...props } = Astro.props;
---

<Text
  {...props}
  as="dt"
  variant={variant ?? 'soft'}
  class={twMerge(
    'flex flex-1 shrink-0 items-center gap-4',
    'after:rounded-border after:h-px after:flex-1 after:border-dashed after:opacity-70 after:content-[""]',
    className,
  )}><slot /></Text
>
