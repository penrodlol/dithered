---
import Text from '@/components/text.astro';
import type { ComponentProps } from 'astro/types';
import { twMerge } from 'tailwind-merge';

type Props = Omit<ComponentProps<typeof Text<'dd'>>, 'as'>;

const { class: className, ...props } = Astro.props;
---

<Text {...props} as="dd" class={twMerge('max-w-[50ch] overflow-hidden text-ellipsis whitespace-nowrap', className)}>
  <slot />
</Text>
