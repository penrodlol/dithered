---
import type { HTMLAttributes } from 'astro/types';
import { twMerge } from 'tailwind-merge';

type Props = HTMLAttributes<'option'>;

const { class: className, ...props } = Astro.props;
---

<option
  {...props}
  class={twMerge(
    'focusable text-gray-11 checked:text-brand-12 rounded px-3 py-1',
    'hover:bg-gray-3 hover:text-gray-12 motion-safe:transition-colors',
    // Checkmark Icon
    '[&::checkmark]:size-4 [&::checkmark]:bg-current [&::checkmark]:[mask-size:cover]',
    '[&::checkmark]:[mask-image:url("data:image/svg+xml;base64,")]',
    className,
  )}
>
  <slot />
</option>
