---
import Text from '@/components/text.astro';
import type { ComponentProps } from 'astro/types';
import { twMerge } from 'tailwind-merge';

type Props = Omit<ComponentProps<typeof Text<'legend'>>, 'as'> & { tooltip?: string };

const { class: className, variant, size, weight, tooltip, ...props } = Astro.props;
---

<Text
  {...props}
  as="legend"
  variant={variant ?? 'soft'}
  size={size ?? '2'}
  weight={weight ?? 'bold'}
  class={twMerge('mb-1 flex items-center gap-1', className)}
>
  <slot />
</Text>
