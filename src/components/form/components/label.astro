---
import Text from '@/components/text.astro';
import type { ComponentProps } from 'astro/types';
import { twMerge } from 'tailwind-merge';

type Props = Omit<ComponentProps<typeof Text<'label'>>, 'as'>;

const { class: className, variant, weight, size, ...props } = Astro.props;
---

<Text
  {...props}
  as="label"
  {variant}
  weight={weight ?? 'bold'}
  size={size ?? '2'}
  class={twMerge('max-w-max select-none', className)}
>
  <slot />
</Text>
