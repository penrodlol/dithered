---
import Text from '@/components/text.astro';
import type { ComponentProps } from 'astro/types';

type Props = Omit<ComponentProps<typeof Text<'label'>>, 'as'> & { tooltip?: string };

const { variant, weight, size, tooltip, ...props } = Astro.props;
---

<Text {...props} as="label" variant={variant ?? 'soft'} weight={weight ?? 'bold'} size={size ?? '2'}><slot /></Text>
