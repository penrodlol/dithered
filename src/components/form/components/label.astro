---
import Text from '@/components/text.astro';
import type { ComponentProps } from 'astro/types';
import { twMerge } from 'tailwind-merge';

type Props = ComponentProps<typeof Text>;

const { as, class: className, weight, size, ...props } = Astro.props;
---

<Text
  {...props}
  as={as ?? 'label'}
  weight={weight ?? 'bold'}
  size={size ?? '2'}
  class={twMerge('max-w-max select-none', className)}
>
  <slot />
</Text>
