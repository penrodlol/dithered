---
import Text from '@/components/text.astro';
import type { ComponentProps } from 'astro/types';

type Props = Omit<ComponentProps<typeof Text<'p'>>, 'as'>;

const { variant, size, ...props } = Astro.props;
---

<Text {...props} variant={variant ?? 'soft'} size={size ?? '2'} :id="name + '-description'"><slot /></Text>
