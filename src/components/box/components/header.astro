---
import type { HTMLTag, Polymorphic } from 'astro/types';
import { twMerge } from 'tailwind-merge';

type Props<Tag extends HTMLTag = 'section'> = Polymorphic<{ as: Tag }>;

const { as: Tag = 'div', class: className, ...props } = Astro.props;
---

<Tag {...props} class={twMerge('bg-gray-1 border-gray-6 rounded-t border-b border-dashed p-4', className)}>
  <slot />
</Tag>
