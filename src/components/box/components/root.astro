---
import type { HTMLTag, Polymorphic } from 'astro/types';
import { tv, type VariantProps } from 'tailwind-variants';

type Props<Tag extends HTMLTag = 'section'> = Polymorphic<{ as: Tag }> & BoxVariants;

export type BoxVariants = VariantProps<typeof boxVariants>;

export const boxVariants = tv({
  base: 'flex h-full flex-col',
  variants: { variant: { elevated: 'rounded-border border-dashed shadow-2xl bg-gray-1/40' } },
});

const { as: Tag = 'section', class: className, variant, ...props } = Astro.props;
---

<Tag {...props} class={boxVariants({ variant, className })}><slot /></Tag>
