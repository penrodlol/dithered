---
import '@/tailwind.css';
import '@fontsource-variable/geist';
import '@fontsource-variable/geist-mono';
import type { HTMLAttributes } from 'astro/types';
import { twMerge } from 'tailwind-merge';

type Props = HTMLAttributes<'main'>;

const { class: className, ...props } = Astro.props;
---

<!doctype html>
<html lang="en" class="bg-gray-1 text-gray-12 scrollbar selection:bg-brand-12 selection:text-brand-1 antialiased">
  <head>
    <title>Dithered</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="title" content="Dithered" />
    <meta name="description" content="Dithered" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <script is:inline set:text="document.documentElement.classList.add('[&_[x-cloak]]:hidden')" />
  </head>
  <body class="flex min-h-svh flex-col">
    <header class="border-gray-6 h-14 border-b border-dashed"></header>
    <main {...props} class={twMerge('flex-1', className)}><slot /></main>
  </body>
</html>
